{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "esnext.AsyncIterable", "dom"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
